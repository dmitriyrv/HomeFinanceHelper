<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <typeAliases>
        <typeAlias alias = "Currency" type = "com.helper.core.Currency"/>
        <typeAlias alias = "Account" type = "com.helper.core.Account"/>
    </typeAliases>

    <environments default = "dev">
        <environment id = "dev">
            <transactionManager type = "JDBC"/>

            <dataSource type = "POOLED">
                <property name = "driver" value = "com.mysql.cj.jdbc.Driver"/>
                <property name = "url" value = "jdbc:mysql://localhost:3306/financehelper"/>
                <property name = "username" value = "root"/>
                <property name = "password" value = "ytrewq"/>
            </dataSource>

        </environment>
    </environments>

    <mappers>
        <mapper resource = "MyBatisMappers/CurrencyMapper.xml"/>
        <mapper resource = "MyBatisMappers/AccountMapper.xml"/>
    </mappers>

</configuration>